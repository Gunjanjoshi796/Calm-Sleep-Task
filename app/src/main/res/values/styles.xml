<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="calendar" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">#000000</item>                   <!--header background-->
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#FB724C</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item><!--days of the month-->
        <item name="android:textColorSecondary">#FB724C</item>

        <!--        Open Dialog -->

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>

    </style>


</resources>